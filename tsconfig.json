{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "lib": ["es6", "dom"],
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "types": ["reflect-metadata", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "outDir": "./built"
  },
  "include": ["src"]
}